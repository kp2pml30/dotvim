{
	"languageserver": {
		"cpp": {
			"command": "clangd",
			"filetypes": ["cpp", "h", "hpp"]
		},
		"haskell": {
			"command": "haskell-language-server-wrapper",
			"args": ["--lsp"],
			"rootPatters": ["*.cabal", "cabal.config", "cabal.project", "stack.yaml"],
			"filetypes": ["hs", "lhs", "haskell"],
			"initilizationOptions": {
				"languageServerHaskell": { "hlintOn": true }
			}
		}
	}
}
